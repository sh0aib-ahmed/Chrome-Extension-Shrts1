{
    "name": "Shrts",
    "version": "1.0.0",
    "description": "Generate the Short URL and QR Code",
    "permissions": ["contextMenus", "activeTab", "storage", "tabs", "clipboardWrite"],
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "manifest_version": 2
  }